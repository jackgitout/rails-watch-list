<%= render "shared/navbar" %>
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1509564324749-471bd272e1ff?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1050&q=80);">
  <div class="container">
    <h1>Here are all your watchlists</h1>
    <p>Change your life and learn to code at one of our campuses around the world.</p>
    <%= link_to "Add Watchlist", new_list_path, class: "btn btn-success" %>
  </div>
</div>

<div class="container">
  <% @lists.each do |list| %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://source.unsplash.com/featured/?<%= list.name%>)">
      <%= link_to "#{list.name}", list_path(list), class: "btn btn-success" %>
    </div>
  <% end %>
</div>