<%= render "shared/navbar" %>
<div class="container">
  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://source.unsplash.com/featured/?<%= @list.name%>)">
    <%= @list.name %> Movies
  </div>
  <%= link_to "Add Movie", new_list_bookmark_path(@list), class: "btn btn-success" %>
  <div class="cards">
    <% @list.movies.each_with_index do |movie, index| %>
      <div class="card-trip">
        <img src="<%= movie.poster_url %>"/>
        <%= link_to "Remove", bookmark_path(@list.bookmarks[index]), method: :delete, data: { confirm: "Are you sure?"}, class: "btn btn-warning btn-sm" %>
        <div class="card-trip-infos">
          <div>
            <h2><%= movie.title %></h2>
            <p><%= movie.overview %></p>
            <p><strong><%= @list.bookmarks[index].comment %></strong></p>
          </div>
        <h2 class="card-trip-pricing"><%= movie.rating %></h2>
        </div>
      </div>
    <% end %>
  </div>
</div>